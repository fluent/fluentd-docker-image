 && gem install json -v 2.7.2 \
 && gem install rexml -v 3.3.5 \
 && gem install async -v 1.32.1 \
 && gem install async-http -v 0.64.2 \
 && gem install fluentd -v <%= fluentd_ver %> \
<% if is_alpine %>
 && gem install bigdecimal -v 1.4.4 \
